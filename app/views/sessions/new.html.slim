.container.center
  .row
    .col-md-6.col-md-offset-3
      h1 Log In
      = simple_form_for(:session, url: login_path) do |f|
        = f.input :email,
                class: "form-control",
                placeholder: "Email",
                maxlength: User::EMAIL_LENGTH_MAX
        = f.input :password,
                class: "form-control",
                placeholder: "Password",
                maxlength: User::PASSWORD_LENGTH_MAX
        .checkbox
          = f.label :remember_me, class: "checkbox inline" do
            = f.check_box :remember_me
            span Remember me on this computer
        = f.submit "Log in", class: "btn btn-primary"
      p= link_to "Forgot password", new_password_reset_path, method: "get"